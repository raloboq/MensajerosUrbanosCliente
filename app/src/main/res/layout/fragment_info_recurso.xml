<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView29"
            android:background="#E4786F" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageRecurso"
            android:src="@drawable/ico_usuario"
            android:layout_gravity="center"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/NOmbreRecurso"
        android:layout_gravity="center"
        android:background="@drawable/button_shape_nocolor_top"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="30dp"
        android:textColor="#858281"
        android:gravity="center" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/CedulaRecurso"
        android:layout_gravity="center"
        android:background="@drawable/onlyborders"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:textColor="#858281"
        android:gravity="center" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/PlacaMotoRecurso"
        android:layout_gravity="center"
        android:background="@drawable/button_shape_nocolor_bottom"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:textColor="#858281"
        android:gravity="center" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Contactarlo"
        android:id="@+id/contactRecurso"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape_nocolor_bottom"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:drawableLeft="@drawable/telefono"
        android:textColor="#858281" />

</LinearLayout>