<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView4" >

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/imageView3"
            android:src="@drawable/banderin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/UserName"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/Descripcionlabel"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textColor="#289DB8" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:id="@+id/descripcion"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/button_shape_nocolor_borders"

            android:hint="@string/Descripcion"
            android:lines="6"
            android:inputType="textImeMultiLine"


            android:imeOptions="actionNext"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Valor_declarado"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/valor_declaradolabel"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#289DB8" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/button_shape_nocolor_borders"
            android:padding="5dp"
            android:ems="10"
            android:id="@+id/valor_declarado"
            android:drawableLeft="@drawable/ico_precio"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:hint="@string/Valor_declarado"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar servicio"
        android:textColor="#ffffff"
        android:id="@+id/Next3"
        android:layout_gravity="center"
        android:background="@drawable/shape_blue_shadow"
        android:padding="10dp" />



</LinearLayout>

    </ScrollView>