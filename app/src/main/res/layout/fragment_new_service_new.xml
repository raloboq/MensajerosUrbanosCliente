<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:id="@+id/imageView3"
                android:src="@drawable/banderin"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/UserName"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Servicio nuevo"
            android:id="@+id/typeservice_Selection"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Que tipo de servicio?"
        android:id="@+id/textView14"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#00A0BB" />

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Express"
            android:drawableLeft="@drawable/express"
            android:ellipsize="start"
        android:textColor="#6B6766"
            android:background="@drawable/button_shape_nocolor_top"
            android:id="@+id/type_service_b1"
            android:textSize="16dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="8dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Estandar"
            android:background="@drawable/onlyborders"
            android:drawableLeft="@drawable/standard"
            android:ellipsize="start"
            android:id="@+id/type_service_b2"
            android:textStyle="normal"
            android:textSize="16dp"

            android:textColor="#6B6766"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/Tipo_diligencia"
            android:id="@+id/type_service_b3"
            android:textStyle="normal"
            android:drawableLeft="@drawable/ico_correo"
            android:ellipsize="start"

            android:textColor="#6B6766"
            android:layout_gravity="center"
            android:background="@drawable/button_shape_nocolor_bottom"
            android:gravity="center"
            android:paddingLeft="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione fecha y hora de recogida"
        android:id="@+id/TimeDatebutton"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_shape_blue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF" />


</LinearLayout>